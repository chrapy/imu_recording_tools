<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/recordingLengthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/maxRecordingLengthText"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recordingLengthInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="10s"
        android:textSize="16dp"
        android:textColor="@color/ap_white"
        android:textStyle=""
        android:onClick="onLengthInputClick"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/recordingLengthText"
        app:layout_constraintStart_toEndOf="@+id/recordingLengthText"
        app:layout_constraintTop_toTopOf="@+id/recordingLengthText" />

    <TextView
        android:id="@+id/countDownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="16dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/recordingLengthText"
        app:layout_constraintEnd_toEndOf="@+id/vRecordButton"
        app:layout_constraintStart_toEndOf="@+id/recordingLengthInput"
        app:layout_constraintTop_toTopOf="@id/recordingLengthText" />

    <Button
        android:id="@+id/vRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/start"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countDownText" />

    <TextView
        android:id="@+id/labelText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/labelIndicator"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activitySelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activitySelector" />

    <Spinner
        android:id="@+id/activitySelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:entries="@array/activities"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/vRecordButton"
        app:layout_constraintEnd_toStartOf="@+id/vRecordButton"
        app:layout_constraintStart_toEndOf="@+id/labelText"
        app:layout_constraintTop_toTopOf="@+id/vRecordButton" />

    <ScrollView
        android:id="@+id/conectedDeviceList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/vRecordButton"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/vFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>