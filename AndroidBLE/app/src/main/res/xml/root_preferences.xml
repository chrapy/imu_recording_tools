    <PreferenceCategory android:title="Recording">
        <PreferenceCategory app:title="Recording Length">


            <SwitchPreferenceCompat
                app:key="FixRecLen"
                app:title="@string/fixedRecLength_title"
                app:summaryOff="@string/fixRecLen_summary_on"
                app:summaryOn="@string/fixRecLen_summary_off"/>

            <SwitchPreferenceCompat
                app:dependency="FixRecLen"
                app:key="SetRecLen"
                app:summaryOff="@string/attachment_summary_off"
                app:summaryOn="@string/attachment_summary_on"
                app:title="@string/attachment_title" />

            <EditTextPreference
                app:key="signature"
                app:title="@string/signature_title"
                app:useSimpleSummaryProvider="true" />

            <ListPreference
                app:defaultValue="reply"
                app:entries="@array/reply_entries"
                app:entryValues="@array/reply_values"
                app:key="reply"
                app:title="@string/reply_title"
                app:useSimpleSummaryProvider="true" />

        </PreferenceCategory>
    </PreferenceCategory>


